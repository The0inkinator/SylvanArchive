---
import "../styles/zaGlobal.css";
import HeaderDefault from "../components/layout/HeaderDefault.astro";
import FooterDefault from "../components/layout/FooterDefault.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/logos/sylvanArchiveBrowserIcon.svg"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Sylvan Archive</title>
  </head>
  <div class="gradOverlay"></div>
  <body>
    <HeaderDefault />
    <div class="pageHeight">
      <slot />
    </div>
  </body>

  <style>
    .gradOverlay {
      position: fixed;
      width: 100vw;
      height: 100vh;
      background: linear-gradient(
        to bottom,
        rgba(41, 163, 94, 0) 80%,
        rgba(41, 163, 94, 0.1) 90%,
        rgba(41, 163, 94, 0.3) 95%,
        rgba(41, 163, 94, 0.7)
      );
      z-index: 5;
    }
    .pageHeight {
      min-height: calc(100vh - var(--HeaderHeight));
      display: flex;
      flex-direction: column;
    }
  </style>


</html>
