---
import HeaderMenu from "./headerMenu/HeaderMenu.astro";
---

<header>
  <div class="headerBar">
    <!-- <div class="headerBG"> -->
    <HeaderMenu />
    <!-- </div> -->
  </div>
</header>

<style>
  .headerBar {
    position: fixed;
    width: 100%;
    height: var(--ContContainUpperMargin);
    z-index: 4;
    pointer-events: none;
    display: flex;
    flex-direction: column;
    /* background: linear-gradient(to top, rgba(0, 0, 0, 0), var(--BackgroundColor)) */
  }

  /* .headerBG {
    width: auto;
    height: auto;
    background-color: rgba(226, 248, 231, 0.5);
  } */

  .headerBar > * {
    pointer-events: auto;
  }

  .menu {
    margin: auto;
    display: flex;
    gap: calc(var(--MenuHeight) / 4);
  }
</style>
