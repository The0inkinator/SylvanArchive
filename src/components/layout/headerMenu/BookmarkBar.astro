<div class="bookmarkBarContainer">
  <div tabindex="0" id="bookmarkBar">
    <div id="bookmarkBarLogo"></div>
    <div id="bookmarkDropdown"></div>
  </div>
</div>

<style>
  .bookmarkBarContainer {
    pointer-events: auto;
    grid-row: 3;
  }

  #bookmarkBar {
    background-color: white;
    height: var(--MenuHeight);
    aspect-ratio: 1/1;
    border-radius: calc(var(--MenuHeight) / 5);
    cursor: pointer;
    display: flex;
    align-items: center;
    filter: drop-shadow(0px 0px 5px var(--ShadowGreen));
  }

  #bookmarkBar:focus-within {
    box-shadow: 0 0 0 2px var(--ShadowGreen);
  }

  #bookmarkBarLogo {
    height: 75%;
    aspect-ratio: 1/1;
    background-image: url("../../logos/bookmarksIcon.svg");
    margin: auto;
  }
</style>
